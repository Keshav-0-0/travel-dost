<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_marginTop="20dp">

    <Button
        android:id="@+id/btnPlanDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/imgPlanNote"
        android:layout_alignParentTop="true"
        android:background="@drawable/delete"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imgPlanNote"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/plan_img_default" />
    
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlanTitle"
        android:layout_below="@+id/imgPlanNote"
        android:gravity="center"
        android:fontFamily="@font/nanumbarunpen_b"
        android:text="Plan Title"/>
    
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlanDate"
        android:layout_below="@id/txtPlanTitle"
        android:gravity="center"
        android:fontFamily="@font/nanumbarunpen_b"
        android:text="Date"/>

</RelativeLayout>